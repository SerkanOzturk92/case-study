{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "node_modules"
  ]
}
